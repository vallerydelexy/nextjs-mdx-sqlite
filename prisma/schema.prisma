generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../public/sqlite.db"
}

model Post {
  id          Int      @id @default(autoincrement())
  cover       String
  title       String
  description String
  slug        String   @unique
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
